{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"]
  },
  "include": ["src/"]
}
